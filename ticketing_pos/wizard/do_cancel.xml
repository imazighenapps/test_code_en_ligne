<odoo>
  <data>
    <record model="ir.ui.view" id="do_cancel_form">
      <field name="name">do.cancel.form</field>
      <field name="model">do.cancel</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
                <field name="msg"/>
                <group>
                  <field name="note"/> 
                </group>
          </sheet>
            <footer>
                <button name="do_cancel" string="Confirmer" class="oe_highlight" type="object" data-hotkey="S" />
                <button special="cancel" data-hotkey="J" string="Fermer" />
            </footer>
        </form>
      </field>
    </record>

    

    <record model="ir.actions.act_window" id="do_cancel_action">
      <field name="name">Annul√©</field>
      <field name="res_model">do.cancel</field>
      <field name="view_mode">form</field>
