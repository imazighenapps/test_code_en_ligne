
<odoo>
  <data>
    <record model="ir.ui.view" id="res_network_tree_view">
      <field name="name">res.network.tree.view</field>
      <field name="model">res.network</field>
      <field name="arch" type="xml">
        <list string="Réseaux">    
            <field name="name"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="res_network_form_view">
      <field name="name">res.network.form.view</field>
      <field name="model">res.network</field>
      <field name="arch" type="xml">
        <form string="Réseaux">
          <header>
                  
          </header>
          <sheet>
          <div class="row">
              <div class="col-8">
                <h1>
                  <field name="name" default_focus="1" placeholder="Nom"/>
                </h1>  
              </div>
            </div>
          </sheet>
        </form>
      </field>
    </record>

    
    <record model="ir.actions.act_window" id="res_network_action">
      <field name="name">Réseaux</field>
      <field name="res_model">res.network</field>
      <field name="view_mode">list,form</field>
    </record>


  </data>
</odoo>

