<odoo>
  <data>

    <record model="ir.ui.view" id="traveler_profile_tree">
      <field name="name">traveler.profile.tree.view</field>
      <field name="model">traveler.profile</field>
      <field name="arch" type="xml">
        <list string="Profil voyageur">
            <field name="name"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="traveler_profile_form_view">
      <field name="name">traveler.profile.form.view</field>
      <field name="model">traveler.profile</field>
      <field name="arch" type="xml">
        <form string="Profil voyageur">
          <sheet>
            <group>
                <group>
                    <field name="name" />
                    <field name="code" />           
                    <field name="class_ids" widget="many2many_tags"/>         
                    <field name="over_ranking" />      
                    <field name="path" />  
                    <label for="passengers_number_from" string="Nombre de passagers"/>            
                    <div>
                      <field name="passengers_number_from" class="oe_inline" /> 
                      <i class="fa fa-fw o_button_icon fa-caret-left"></i>
                      <i class="fa fa-fw o_button_icon fa-caret-right"></i>
                      <field name="passengers_number_to" class="oe_inline"/> 
                    </div>


                      
                </group>
                <group>
                    <label for="validity_type"/>
                    <div>   
                      <field name="validity_type" class="oe_inline"/>
                      <i class="fa fa-fw o_button_icon fa-arrow-right"  invisible = "validity_type != 'fixed'" ></i>
                      <field name="validity_number" class="oe_inline" invisible = "validity_type != 'fixed'" /> 
                      <i class="fa fa-fw o_button_icon fa-arrow-right" invisible = "validity_type != 'fixed'" ></i>
                      <field name="validiy_unit" class="oe_inline" invisible = "validity_type != 'fixed'" />     
                    </div> 
                    <field name="validity_from" invisible = "validity_type != 'period'" />     
                    <field name="validity_to" invisible = "validity_type != 'period'" /> 
                    <field name="python_validation" invisible = "validity_type != 'python_code'" /> 
                    <field name="discount"/>   
                    <field name="category"/>
                    <field name="category_with_ids" widget="many2many_tags"/> 
                    <field name="is_defaul"/> 

                </group>
            </group>

            <notebook>
              <!-- <page string="CatÃ©gorie Avec">
                <field name="category_with_ids">
                  <tree editable="bottom">
                    <field name="category_Profil_id"/>
                  </tree>
                  <form>
                    <group>
                      <group>
                          <field name="category_Profil_id"/>
                      </group>

                      <group>
                      </group>
                    </group>
                  </form>
                </field>
              </page> -->
              <page string="Note">
                    <field name="note"/>  
              </page>
            </notebook>
          
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="traveler_profile_action_window">
      <field name="name">Profil voyageur</field>
      <field name="res_model">traveler.profile</field>
      <field name="view_mode">list,form</field>
    </record>

  </data>
</odoo>