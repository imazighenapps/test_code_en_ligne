<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="PrintStatus" owl="1">
         <div class="row">
            <div class="col-3">
                <t t-if="state.ApiStatus">
                    <img src="/ticketing_pos/static/src/images/green_shutdown.png" style="width: 40px;"/>
                
                </t>
                <t t-if="!state.ApiStatus">
                    <img src="/ticketing_pos/static/src/images/read_shutdown.png" style="width: 40px;"/>
                </t>
            </div>    
            <div class="col-3">
                <t t-if="state.printerStatus">
                    <img src="/ticketing_pos/static/src/images/green_printer.png" style="width: 40px;"/>
                
                </t>
                <t t-if="!state.printerStatus">
                    <img src="/ticketing_pos/static/src/images/read_printer.png"  style="width: 40px;"/>
                </t>
            </div>    
    </div>
    </t>
</templates>
