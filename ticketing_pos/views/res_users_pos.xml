<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_users_pos_form" model="ir.ui.view">
            <field name="name">res.users.pos.form.inherit</field>
            <field name="model">res.users.pos</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/> 
                                <field name="login"/> 
                            </group>
                            <group>
                                <field name="password"/> 
                                <field name="code"/>
                                <field name="station_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_users_pos_list" model="ir.ui.view">
            <field name="name">view.users.pos.list</field>
            <field name="model">res.users.pos</field>
            <field name="arch" type="xml">
                <list string="">
                    <field name="name"/> 
                    <field name="login"/> 
                    <field name="password"/> 
                    <field name="code"/>
                    <field name="station_id"/>
                </list>
            </field>
        </record>

        <record id="users_pos_action" model="ir.actions.act_window">
            <field name="name">Utilisateur</field>
            <field name="res_model">res.users.pos</field>
            <field name="view_mode">list,form</field>
            
        </record>


 </odoo>
