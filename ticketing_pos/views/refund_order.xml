<odoo>
  <data>
    <record model="ir.ui.view" id="refund_order_form">
      <field name="name">refund.order.form</field>
      <field name="model">refund.order</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
           <group>
              <group>
                  <field name="name"/>
                  <field name="order_id"/>   
              </group>
              <group>
                  <field name="refund_date"/>   
              </group>
          </group>
          <group>
              <field name="note"/> 
          </group>
          <group class="oe_subtotal_footer fw-bold" colspan="2" name="sale_total">
              <field name="company_id" invisible="1"/>    
              <field name="currency_id" invisible="1" />  
              <field name="amount_order"/>     
              <field name="amount_refund"/>     
          </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="refund_order_list">
      <field name="name">refund.order.list</field>
      <field name="model">refund.order</field>
      <field name="arch" type="xml">
        <list create="0" delete="0" edit="0">
            <field name="name"/>
            <field name="order_id"/>   
            <field name="refund_date"/>   
            <field name="note"/> 
            <field name="amount_refund"/> 
            <field name="company_id" column_invisible="1"/>    
            <field name="currency_id" column_invisible="1"/> 
        </list>
      </field>
    </record>

    <record model="ir.actions.act_window" id="refund_order_action">
      <field name="name">Remboursement</field>
      <field name="res_model">refund.order</field>
      <field name="view_mode">list,form</field>
    </record>
  </data>
</odoo>