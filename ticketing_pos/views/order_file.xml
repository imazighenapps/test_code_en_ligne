
<odoo>
  <data>
    <record model="ir.ui.view" id="order_file_tree_view">
      <field name="name">order.file.tree.view</field>
      <field name="model">order.file</field>
      <field name="arch" type="xml">
        <list string="Fichiers des ventes">    
            <field name="name"/>
            <field name="date_file" readonly="1"/>
            <field name="description"/>
            <field name="file_filename" column_invisible='1'/>
            <field name="file_data" filename="file_filename"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="order_file_form_view">
      <field name="name">order.file.form.view</field>
      <field name="model">order.file</field>
      <field name="arch" type="xml">
        <form string="Fichier de ventes">
          <sheet>
              <group>
                  <group>
                      <field name="name" readonly="1"/>
                      <field name="date_file" readonly="1"/>
                      <field name="description" />

                    </group>
                    <group>
                        <field name="file_filename" invisible="1"/>
                        <field name="file_data" filename="file_filename" readonly="1"/>
                    </group>
              </group>
          </sheet>
        </form>
      </field>
    </record>

    
    <record model="ir.actions.act_window" id="order_file_action">
      <field name="name">Fichiers des ventes</field>
      <field name="res_model">order.file</field>
      <field name="view_mode">list,form</field>
    </record>


  </data>
</odoo>

