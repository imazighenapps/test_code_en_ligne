<odoo>
  <data>

    <record model="ir.ui.view" id="res_branch_tree_view">
      <field name="name">res.branch.tree.view</field>
      <field name="model">res.branch</field>
      <field name="arch" type="xml">
        <list string="Branches">
            <field name="name"/>
            <field name="code"/>
            <field name="amount_distance"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="res_branch_form_view">
      <field name="name">res.branch.form.view</field>
      <field name="model">res.branch</field>
      <field name="arch" type="xml">
        <form string="Branche">   
         <sheet>
           <div name="button_box" class="oe_button_box"> 
              <button type="object" class="oe_stat_button" name="do_nothing" icon='fa-route' style="pointer-events:none;">                 
                <div class="o_stat_info">
                    <span>Parcours</span> 
                    <field name="amount_distance" string='' class="o_stat_value" widget="statinfo"/>   
                  </div>
              </button>
           </div>

           <div class="row">
              <div class="col-8">
                <h3>
                  <field name="name"  placeholder="Nom" />
                </h3>  
              </div>
            
              <div class="col-4"> 
                <h3>   
                  <field name="code" default_focus="1" placeholder="Code"/>
                </h3>
              </div>            
            </div>
       
          <notebook>
                <page string="listes des gares">
                  <field name="station_line_ids">
                    <list editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="station_id"/>
                        <field name="distance" class="distance"/>
                    </list>
                    <form>
                      <group>
                        <group>
                            <field name="station_id" />
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                      
                    </form>
                  </field>
                </page>
            </notebook>
          </sheet>
      
        </form>
      </field>
    </record>
    
  <record id="res_branch_search" model="ir.ui.view">
        <field name="name">res.branch.search</field>
        <field name="model">res.branch</field>
        <field name="arch" type="xml">
            <search string="Branch search">
                <separator/>
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_branch_action_window">
      <field name="name">Branches</field>
      <field name="res_model">res.branch</field>
      <field name="view_mode">list,form</field>
      <field name="context"></field>
      <field name="domain"></field>
    </record>


  </data>
</odoo>

