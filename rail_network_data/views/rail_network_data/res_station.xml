
<odoo>
  <data>
    <record model="ir.ui.view" id="res_station_tree_view">
      <field name="name">res.station.tree.view</field>
      <field name="model">res.station</field>
      <field name="arch" type="xml">
        <list string="Gares">    
            <field name="name"/>
            <field name="code"/>
            <field name="name_arabe"/>
  

        </list>
      </field>
    </record>

    <record id="res_station_kanban_view" model="ir.ui.view">
      <field name="name">res.station.kanban.view</field>
      <field name="model">res.station</field>
      <field name="arch" type="xml">
        <kanban quick_create="false" group_create="false" records_draggable="false">
          <templates>
            <t t-name="kanban-box">
                <div class="oe_kanban_content oe_kanban_global_click o_kanban_record_has_image_fill">
                    <field name="image" widget="image" class="o_kanban_image_fill_left o_hr_rounded_circle" options="{'zoom': true, 'background': true, 'preventClicks': false}"/>
                    <div class="oe_kanban_details">
                      <div>
                          <strong class="o_kanban_record_title"><field name="name"/></strong>
                      </div>
                      <div class="float-right">
                          <strong class="o_kanban_record_title"><field name="code"/></strong>
                      </div>

                      <ul class="list-unstyled">
                          <li t-if="record.state_id.raw_value"><field name="state_id"/></li>
                      </ul>
                    </div> 

                </div>    
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <record model="ir.ui.view" id="res_station_form_view">
      <field name="name">res.station.form.view</field>
      <field name="model">res.station</field>
      <field name="arch" type="xml">
        <form string="Gare">
            <header>
               <!-- <field name="state" widget="statusbar" clickable = "True"/> -->
            </header>
          <sheet>
          
          <field name="image" widget="image" class="oe_avatar" options="{&quot;zoom&quot;: true, &quot;preview_image&quot;:&quot;image_128&quot;}"/>
          <div class="row">
              <div class="col-8">
                <h1>
                  <field name="name" default_focus="1" placeholder="Nom"/>
                </h1>  
              </div>
              <div class="col-4"> 
                <h1>   
                  <field name="code" default_focus="1" placeholder="Code"/>
                </h1>
              </div>            
            </div>
            <group>
              <group>
                  <field name="name_arabe"/>
                  <field name="is_bifurcation"/>
                  <field name="bifurcation" invisible ="not is_bifurcation"/>
                                
              </group>
              <group>
                  <field name="state_id" widget="selection"/>
                  <field name="region_id"/>
              </group>
            </group>
            <notebook>
              <page string="Position géographique">
                <group>
                  <group>
                     <field name="longitude"/>
                  </group>
                  <group>
                      <field name="latitude"/>
                  </group>
                </group>
               
              </page>
              <page string="Autre informations">
                <group>
                  <group>
                     <field name="ip"/>
                  </group>
                </group>
               
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="res_station_search" model="ir.ui.view">
        <field name="name">res.station.search</field>
        <field name="model">res.station</field>
        <field name="arch" type="xml">
            <search string="Station search">
                <separator/>
                <field name="name"/>
                <field name="code"/>
                <field name="name_arabe"/>
                <group expand="1" string="Regrouper par">
                    <filter string="wilaya Desservie" name='state_id' context="{'group_by':'state_id'}"/>
                    <filter string="Région" name='region_id' context="{'group_by':'region_id'}"/>
                </group>
            </search>
        </field>
    </record>  
    
    <record model="ir.actions.act_window" id="res_station_action">
      <field name="name">Gares</field>
      <field name="res_model">res.station</field>
      <field name="view_mode">kanban,list,form</field>
      <field name="context"></field>
      <field name="domain"></field>

    </record>


  </data>
</odoo>

