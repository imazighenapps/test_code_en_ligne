
<odoo>
  <data>
    <record model="ir.ui.view" id="config_file_tree_view">
      <field name="name">config.file.tree.view</field>
      <field name="model">config.file</field>
      <field name="arch" type="xml">
        <list string="Fichier de configuration">    
            <field name="name"/>
            <field name="network_id" widget="selection"/>
            <field name="date" readonly="1"/>
            <field name="is_active"/>
            <field name="description"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="config_file_form_view">
      <field name="name">config.file.form.view</field>
      <field name="model">config.file</field>
      <field name="arch" type="xml">
        <form string="Fichier de configuration">
          <sheet>
              <group>
                  <group>
                      <field name="name"/>
                      <field name="date" readonly="0"/>
                      <field name="is_active"/>
                      <field name="description"/>

                    </group>
                    <group>
                        <field name="network_id" widget="selection"/>
                        <field name="file_filename" invisible="1"/>
                        <field name="file_data" filename="file_filename"/>
                    </group>
              </group>
          </sheet>
        </form>
      </field>
    </record>

    
    <record model="ir.actions.act_window" id="config_file_action">
      <field name="name">Fichier de configuration</field>
      <field name="res_model">config.file</field>
      <field name="view_mode">list,form</field>
    </record>


  </data>
</odoo>

