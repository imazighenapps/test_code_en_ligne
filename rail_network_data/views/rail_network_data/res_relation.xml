<odoo>
  <data>

    <record model="ir.ui.view" id="res_relation_tree_view">
      <field name="name">res.relation.tree.view</field>
      <field name="model">res.relation</field>
      <field name="arch" type="xml">
        <list string="Relations">
            <field name="name"/>
            <field name="code"/>
            <field name="amount_distance"/>
        </list>
      </field>
    </record>

    <record model="ir.ui.view" id="res_relation_form_view">
      <field name="name">res.relation.form.view</field>
      <field name="model">res.relation</field>
      <field name="arch" type="xml">
        <form string="Relation">
          <sheet>
          <div name="button_box" class="oe_button_box"> 
              <div class="o_stat_info">
                  <field name="amount_distance" string='KM' class="o_stat_value" widget="statinfo"/>   
                </div>
           </div>
           <group>
              <group>
                  <field name="name" default_focus="1" placeholder="Nom"/>
              </group>
              <group>
                  <field name="code" placeholder="Code"/>
              </group>
           </group>
            <notebook>
                <page string="Liste des branches">                     
                  <field name="branch_ids">
                    <list editable="bottom">
                        <field name="sequence"  widget="handle"/>
                        <field name="branch_id"/>
                        <field name="sense"/>
                        <field name="distance"/>
                    </list>
                    <form>
                      <group>
                        <group>
                            <field name="branch_id" />
                        </group>  
                        <group>
                            <field name="distance"/>
                        </group>
                      </group>
                    </form>
                  </field>
                </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>
       
    <record id="res_relation_search" model="ir.ui.view">
        <field name="name">res.relation.search</field>
        <field name="model">res.relation</field>
        <field name="arch" type="xml">
            <search string="Relation search">
                <separator/>
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="res_relation_action">
        <field name="name">Relations</field>
        <field name="res_model">res.relation</field>
        <field name="view_mode">list,form</field>
      
    </record>

  </data>
</odoo>

